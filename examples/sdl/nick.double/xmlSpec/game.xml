<GameData>
<!-- screenTitle is also used to identify you and your animation.
     So make sure to include your name as part of the screenTitle -->
<title>starfield ndreed</title>
<maxStringSize>50</maxStringSize>

<frameCapOn>true</frameCapOn>
<period>17</period>

<maxFrames>2000</maxFrames>
<username>ndreed</username>

<!-- ==== display elements ================================================ -->

<view>
  <width>854</width>
  <height>480</height>
</view>

<world>
  <width>2000</width>
  <height>2000</height>
</world>

<!-- ==== NPC count elements ============================================== -->

<!--How many darts are present-->
<dartCount>40</dartCount>

<!--How many birds are present-->
<birdCount>40</birdCount>

<!--How many behemoths are present-->
<behemothCount>1</behemothCount>

<!-- ==== player behavior elements ======================================== -->

<playerMaxSpeed>800</playerMaxSpeed>

<playerAcceleration>20</playerAcceleration>

<playerDamping>0.96</playerDamping>

<!-- ==== bird behavior elements ========================================== -->

<!--How far a bird can see other birds to flock-->
<birdNeighborRadius>400</birdNeighborRadius>

<!--How close another bird can get before this one panics-->
<birdPanicRadius>100</birdPanicRadius>


<!--Max bird speed-->
<birdMaxSpeed>500</birdMaxSpeed>

<!--Bird speed damper, for when they get too fast-->
<birdDamping>1.1</birdDamping>


<!--How strongly birds are attracted to one another-->
<flockCoherence>15</flockCoherence>

<!--How likely birds are to fly the same direction as the flock-->
<flockAlignment>1</flockAlignment>

<!--How strongly the birds move apart when they get too close-->
<flockSeparation>4</flockSeparation>

<!--How strongly the birds avoid walls-->
<flockAvoidance>1</flockAvoidance>

